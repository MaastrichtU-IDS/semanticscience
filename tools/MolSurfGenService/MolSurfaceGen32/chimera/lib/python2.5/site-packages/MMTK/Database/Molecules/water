pdbmap = [('HOH', {'O': O, 'H1': H1, 'H2': H2})]
pdb_alternative = {'OH2': 'O', '1H': 'H1', '2H': 'H2'}

amber_atom_type = {O: 'OW', H1: 'HW', H2: 'HW'}
amber_charge = {O: -0.83400, H1: 0.41700, H2: 0.41700}

opls_atom_type = {O: 'OT', H1: 'HT', H2: 'HT'}
